@{
    ViewData["Title"] = "Map page";
}

<h3>Our map page!</h3>

<a class="mapouter align-items-center">
    <div class="gmap_canvas">
        <div class="map-responsive">
            <iframe width="800"
                    height="600"
                    id="gmap_canvas"
                    src="https://maps.google.com/maps?q=sofia&t=&z=9&ie=UTF8&iwloc=&output=embed"
                    frameborder="1"
                    scrolling="no"
                    marginheight="0"
                    marginwidth="0">
            </iframe>
        </div>
        <style>
            .mapouter {
                position: center;
                text-align: center;
                height: 600px;
                width: 800px;
            }
        </style>
        <style>
            .gmap_canvas {
                overflow: hidden;
                background: none !important;
                height: 600px;
                width: 800px;
            }
        </style>
    </div>
</a>