@model GelatoGuide.Models.Places.PlaceDetailsVewModel

@{
    ViewBag.Title = "Details";
    
}

<style>
    .wrapper {
        position: relative;
        overflow: hidden;
    }

    .wrapper:after {
        content: '';
        display: block;
        padding-top: 3%;
    }

    .wrapper img {
        width: auto;
        height: 100%;
        max-width: none;
        position: absolute;
        left: 100%;
        top: 0;
        transform: translateX(-50%);
    }

    .mapouter {
        position: relative;
        text-align: right;
        height: 600px;
        width: 600px;
    }

    .gmap_canvas {
        overflow: hidden;
        background: none !important;
        height: 600px;
        width: 600px;
    }
</style>


<div class="container col-10">
    <!--jumbotron-->
    <div class="col-12 jumbotron"
         style="background-image: url(@Model.MainImageUrl); background-size: cover; opacity: 0.85; height: 30%;">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-12 p-5">
                    <h1 class="display-3" style="text-shadow: 2px 2px 4px white; color: black">@Model.Name</h1>
                </div>
            </div>
        </div>
    </div>
    <!--Body with the info-->
    <div class="row">
        <div class="col-md-7">
            <div class="p-4 mb-3 bg-light rounded">
                <h5>Относно</h5>
                <p class="mb-0">@Model.Description</p>
            </div>
            <div class="p-4 mb-3 bg-light rounded">
                <p><b>Датира от: </b>@Model.SinceYear</p>
                <hr/>
                <p><b>Сайт: </b><a href="@Model.WebsiteLink" target="_blank">@Model.WebsiteLink</a></p>
                <hr/>
                <p><b>Адрес: </b>@Model.Address, @Model.City, @Model.Country</p>
            </div>
            <div class="p-4 mb-3 bg-light rounded">
                <h6>Ако искате да направите поръчка:</h6>
                <p><b>Glovo: </b><a href="@Model.GlovoUrl" target="_blank">@Model.GlovoUrl</a></p>
                <p><b>Takeaway: </b><a href="@Model.TakeawayUrl" target="_blank">@Model.TakeawayUrl</a></p>
                <p><b>Foodpanda: </b><a href="@Model.FoodpandaUrl" target="_blank">@Model.FoodpandaUrl</a></p>
            </div>
        </div>
        <div class="card-img col-md-5 text-center">
            <!--map view-->
            <div class="wrapper">
                <div class="gmap_canvas">
                    <iframe width="600" height="600" id="gmap_canvas" 
                            src="https://maps.google.com/maps?q=@Model.Location&t=&z=17&ie=UTF8&iwloc=&output=embed" 
                            frameborder="0" 
                            scrolling="yes" 
                            marginheight="0" 
                            marginwidth="0">
                    </iframe>
                </div>
            </div>
            <!--image box, uncomment if you want to use it and disable the map-->
            @*<div class="wrapper mb-3">
                <img src="https://res.cloudinary.com/dmflbhinu/image/upload/c_crop,h_945,q_100,w_945,x_0,y_250/v1628797665/GelatoGuide/IMG_2930-2-945x1417_ds1obt.jpg" class="rounded img-fluid" />
            </div>*@
            <div class="p-3 bg-light rounded">
                <p class="mb-0">
                    <a href="@Model.FacebookUrl" target="_blank" class="btn rounded mr-5 mb-0" style="border-width: 3px; color: #4267B2; border-color: #4267b2">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="@Model.InstagramUrl" target="_blank" class="btn rounded mr-0 mb-0" style="border-width: 3px; color: #E1306C; border-color: #833AB4">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="@Model.TwitterUrl" target="_blank" class="btn rounded ml-5 mb-0" style="border-width: 3px; color: #1DA1F2; border-color: #1DA1F2">
                        <i class="fab fa-twitter"></i>
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />

