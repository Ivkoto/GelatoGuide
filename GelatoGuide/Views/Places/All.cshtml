@model SearchPlaceViewModel

@{
    ViewData["Title"] = "All places";
}

<div class="row text-center mt-5">
    <div class="col">
        <h2>Find a Gelateria</h2>
    </div>
</div>
<div class="row mt-5">
    <!-- Places gallery -->
    <div class="col-6 offset-3">
        <div class="row justify-content-center">
            @foreach (var place in Model.Places)
            {
                <div class="container">
                    <a class="text-dark" asp-controller="Places" asp-action="Details" asp-route-id="@place.Id">
                        <div class="card mb-5">
                            <img class="card-img-top" src="@place.MainImageUrl" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@place.Name</h5>
                                <p class="card-text">@place.Description</p>
                                <i>Базирано в @place.Country, @place.City</i>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>

    <!--Search area-->
    <div class="col col-3 justify-content-center">
        <form method="get">
            <div class="jumbotron" style="background-color: antiquewhite">
                <h3 class="text-center">Търсене</h3>
                <div class="form-group">
                    @*<label style="font-size: 120%" asp-for="SearchTerm">Търси</label>*@
                    <input asp-for="SearchTerm" class="form-control" placeholder="Въведете текст тук..."/>
                </div>
                <div class="form-group">
                    <label style="font-size: 120%" asp-for="Country">Изберете държава</label>
                    <select asp-for="Country" class="form-control">
                        <option value="">Всички</option>
                        @foreach (var country in Model.Contries)
                        {
                            <option value="@country">@country</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label style="font-size: 120%" asp-for="City">Изберете град</label>
                    <select asp-for="City" class="form-control">
                        <option value="">Всички</option>
                        @foreach (var city in Model.Cities)
                        {
                            <option value="@city">@city</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-light" value="Търси"/>
                </div>
            </div>
        </form>
    </div>
    
    <!--Previous and next page buttons-->
    @{
        
        var previousPage = Model.CurrentPage - 1;
        if (previousPage < 1)
        {
            previousPage = 1;
        }
        var nextPage = Model.CurrentPage + 1;

        var maxPagesCount = (int)Math.Ceiling((double)Model.TotalPlaces / SearchPlaceViewModel.PlacesPerPage);
    }
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col col-auto">
                <a class="btn btn-light @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
                   asp-controller="Places"
                   asp-action="All"
                   asp-route-CurrentPage="@previousPage"
                   asp-route-SearchTerm="@Model.SearchTerm"
                   asp-route-Country ="@Model.Country"
                   asp-route-City="@Model.City">
                    Предишна
                </a>
            </div>
            <div class="col col-auto">
                <a class="btn btn-light @(Model.CurrentPage == maxPagesCount ? "disabled" : string.Empty)"
                   asp-controller="Places"
                   asp-action="All"
                   asp-route-CurrentPage="@nextPage"
                   asp-route-SearchTerm="@Model.SearchTerm"
                   asp-route-Country ="@Model.Country"
                   asp-route-City="@Model.City">
                    Следваща
                </a>
            </div>
        </div>
    </div>
</div>



