@using Microsoft.AspNetCore.Identity
@using GelatoGuide.Data.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<ul class="navbar-nav flex-grow-1">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-center text-dark font-italic" style="" asp-area="" asp-controller="Blog" asp-action="All">Блог</a>
        </li>
    }
</ul>
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-center" style="color: blueviolet" asp-area="Administration" asp-controller="Admin" asp-action="Index">Admin</a>
            </li>
        }
        if (User.IsInRole("Regular"))
        {
            <li class="nav-item">
                <a class="nav-link text-danger" asp-area="" asp-controller="User" asp-action="CreatePremium">Стани Премиум</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Акаунт</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                <button type="submit" class="nav-link btn btn-link text-dark">Отпиши се</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
