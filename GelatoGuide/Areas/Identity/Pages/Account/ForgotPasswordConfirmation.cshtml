@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Потвърждение за забравена парола";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<br/>
<div class="row">
    <div class="col-sm-6 offset-sm-3 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
        <h5 class="text-center font-italic text-danger">
            @*Please check your email to reset your password.*@
            Моля проверете електронна си поща, за да смените вашата парола.
        </h5>
    </div>
</div>
