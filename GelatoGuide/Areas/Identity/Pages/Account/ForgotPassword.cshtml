@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Забравили сте паролата си?";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h4 class="text-center">Въведете вашата електронна поща</h4>

<div class="row">
    <div class="col-sm-6 offset-sm-3 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
        <form method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Електронна поща</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Изпрати</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
