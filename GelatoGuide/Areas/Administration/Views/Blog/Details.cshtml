@model ArticleServiceModel

@{
    ViewBag.Title = "Article Details";
}

<div class="container-fluid">
    <div class="row col-12">
        <div class="col-7">
            <h2 class="display-4 mb-4">@Model.Title</h2>
            <p class="m-0" style="font-style: italic">
                @{
                    var s = Model.PostedByDate.ToString("dddd, dd MMMM yyyy");
                }
                @s
            </p>
            <p class="m-0" style="font-style: italic">Posted by: @Model.PostedByName</p>
            <hr />
            <p class="m-0" style="font-style: italic">User: @Model.UserName</p>
            <p class="m-0" style="font-style: italic">User ID: @Model.UserId</p>
            <p class="m-0" style="font-style: italic">Article ID: @Model.Id</p>
            <hr />
            <h3 class="mt-3" style="font-style: italic">@Model.SubTitle</h3>
            <p class="mb-4">@Model.ArticleText</p>
            <p style="font-style: italic">Source: <a href="@Model.SourceUrl" target="_blank">@Model.SourceName</a></p>

        </div>
        <div class="col-5">
            <img src="@Model.Image" alt="img" class="img-thumbnail">
        </div>
    </div>
</div>