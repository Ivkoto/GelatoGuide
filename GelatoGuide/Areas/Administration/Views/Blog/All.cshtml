@model IEnumerable<ArticleServiceModel>

@{
    ViewBag.Title = "All Articles";
    var counter = 1;
}

<div class="container-fluid">
    <div class="row justify-content-end text-center mb-4">
        <div class="col-4">
            <h3>@ViewBag.Title</h3>
        </div>
        <div class="col-4">
            <a asp-controller="Blog" asp-action="Create" class="btn btn-secondary">Create Article</a>
        </div>
    </div>
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Source Name</th>
            <th scope="col">Posted By Name</th>
            <th scope="col">Posted By Date</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <th scope="row">@counter</th>
                <td>@article.Title</td>
                <td>@article.SourceName</td>
                <td>@article.PostedByName</td>
                <td>@article.PostedByDate</td>
                <td>
                    <a class="btn btn-sm text-info" asp-controller="Blog" asp-action="Details" asp-route-id="@article.Id">
                        Details
                    </a>
                </td>
                <td>
                    <a class="btn btn-sm text-primary" asp-controller="Blog" asp-action="Update" asp-route-id="@article.Id">
                        Update
                    </a>
                </td>
                <td>
                    <form asp-controller="Blog" asp-action="Delete" asp-route-id="@article.Id" method="post">
                        <button type="submit"
                                class="btn btn-sm text-danger"
                                onclick="return confirm('Are you sure you want to delete @article.Title')">
                            DELETE
                        </button>
                    </form>
                </td>
            </tr>

            counter++;
        }
        </tbody>
    </table>
</div>