@model UserFormModel

@{
    ViewData["Title"] = "Update User";
}

<div class="container">
    <div class="row justify-content-end text-center mb-4">
        <div class="col-4">
            <h3>@ViewData["Title"]: @Model.Username</h3>
        </div>
        <div class="col-4">
            <a asp-controller="Users" asp-action="All" class="btn btn-secondary">All Users</a>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
    <partial name="_UserFormPartial" model="Model"/>
</div>

