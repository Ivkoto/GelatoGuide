 @model List<UserServiceModel>

@{
    ViewBag.Title = "All Users";
    var counter = 1;
}
 <div class="container">
     <div class="row justify-content-end text-center mb-4">
         <div class="col-4">
             <h3>@ViewBag.Title</h3>
         </div>
         <div class="col-4">
             <a asp-controller="Users" asp-action="Create" class="btn btn-secondary">Create User</a>
         </div>
     </div>
     <table class="table table-striped table-sm">
         <thead>
         <tr>
             <th scope="col">#</th>
             <th scope="col">Id</th>
             <th scope="col">Username</th>
             <th scope="col">Email</th>
             <th scope="col">Phone Number</th>
             <th scope="col">User Role</th>
             <th scope="col"></th>
             <th scope="col"></th>
         </tr>
         </thead>
         <tbody>
         @foreach (var user in Model)
         {
             <tr>
                 <th scope="row">@counter</th>
                 <td>@user.Id</td>
                 <td>@user.Username</td>
                 <td>@user.Email</td>
                 <td>@user.PhoneNumber</td>
                 <td>@user.Role</td>
                 <td>
                     <a class="btn btn-sm text-primary"
                        asp-controller="Users"
                        asp-action="Update"
                        asp-route-id="@user.Id">
                         Update
                     </a>
                 </td>
                 <td>
                     <form
                           asp-controller="Users" 
                           asp-action="Delete" 
                           asp-route-id="@user.Id"
                           method="post">
                         <button
                             type="submit"
                             class="btn btn-sm text-danger"
                             onclick="return confirm('Are you sure you want to delete @user.FullName')"
                         >DELETE
                         </button>
                     </form>
                 </td>
             </tr>
            
             counter++;
         }
         </tbody>
     </table>
 </div>