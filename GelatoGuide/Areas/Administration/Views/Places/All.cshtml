@model IEnumerable<ReadPlaceViewModel>

@{
    ViewData["Title"] = "All added places";
    var counter = 1;
}

<div class="container-fluid">
    <div class="row justify-content-end text-center mb-4">
        <div class="col-4">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="col-4">
            <a asp-controller="Places" asp-action="Add" class="btn btn-secondary">Create Role</a>
        </div>
    </div>
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Website</th>
            <th scope="col">Since Year</th>
            <th scope="col">Country</th>
            <th scope="col">City</th>
            <th scope="col">Created on</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var place in Model)
        {
            <tr>
                <th scope="row">@counter</th>
                <td>@place.Id</td>
                <td>@place.Name</td>
                <td>
                    <a href="@place.WebsiteLink" target="_blank">@place.WebsiteLink</a>
                </td>
                <td>@place.SinceYear</td>
                <td>@place.Country</td>
                <td>@place.City</td>
                <td>@place.DateCreated</td>
            </tr>

            counter++;
        }
        </tbody>
    </table>
</div>

