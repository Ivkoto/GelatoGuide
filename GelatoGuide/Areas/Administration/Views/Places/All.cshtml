@model IEnumerable<ReadPlaceViewModel>

@{
    ViewData["Title"] = "All added places";
    var counter = 1;
}

<h3 style="text-align: center">@ViewData["Title"]</h3>

<table class="table table-striped table-sm">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Website</th>
        <th scope="col">Since Year</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var place in Model)
    {
        <tr>
            <th scope="row">@counter</th>
            <td>@place.Id</td>
            <td>@place.Name</td>
            <td>
                <a href="@place.WebsiteLink" target="_blank">@place.WebsiteLink</a>
            </td>
            <td>@place.SinceYear</td>
        </tr>

        counter++;
    }
    </tbody>
</table>