@model IEnumerable<IdentityRole>
@addTagHelper *, GelatoGuide

<div class="container">
    <div class="row justify-content-end text-center mb-4">
        <div class="col-4">
            <h3>All Roles</h3>
        </div>
        <div class="col-4">
            <a asp-action="Create" class="btn btn-secondary">Create Role</a>
        </div>
    </div>
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Users</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var role in Model.OrderBy(r => r.Name))
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td i-role="@role.Id"></td>
                <td>
                    <a class="btn btn-sm text-primary"
                       asp-controller="Roles"
                       asp-action="Update"
                       asp-route-id="@role.Id">
                        Update
                    </a>
                </td>
                <td>
                    <form
                        asp-controller="Roles"
                        asp-action="Delete"
                        asp-route-id="@role.Id" 
                        method="post">
                        <button type="submit" class="btn btn-sm text-danger">DELETE</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
