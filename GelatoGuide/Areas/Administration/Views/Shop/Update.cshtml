@model ShopItemFormModel

@{
    ViewBag.Title = "Update Item";
}

<div class="container-fluid">
    <div class="row justify-content-end text-center mt-4">
        <div class="col-4">
            <h3>@ViewBag.Title</h3>
        </div>
        <div class="col-4">
            <a asp-action="All" class="btn btn-secondary">All Items</a>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
    <partial name="_ItemFormPartial" model="Model" />
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}