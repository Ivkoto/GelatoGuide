@model IEnumerable<ShopItemServiceModel>

@{
    ViewData["Title"] = "All added items in the shop";
    var counter = 1;
}

<div class="container-fluid">
    <div class="row justify-content-end text-center mb-4">
        <div class="col-4">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="col-4">
            <a asp-controller="Shop" asp-action="Create" class="btn btn-secondary">Add Item to the Shop</a>
        </div>
    </div>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@counter</th>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>
                        <a class="btn btn-sm text-primary" asp-controller="Shop" asp-action="Update" asp-route-id="@item.Id">
                            Update
                        </a>
                    </td>
                    <td>
                        <form asp-controller="Shop" asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-sm text-danger" onclick="return confirm('Are you sure you want to delete @item.Name')">DELETE</button>
                        </form>
                    </td>
                </tr>
                counter++;
            }
        </tbody>
    </table>
</div>

